<h5 class="card-title">Simple table</h5>
                                    <table class="mb-0 table">
                                         <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Người đăng</th>
            <th>Nội dung ngắn</th>
            <th>Nguồn đăng</th>
            <th>Ngày đăng</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.tieu_de}}</td>
            <td>{{this.nguoi_dang}}</td>
            <td>{{this.noi_dung_ngan}}</td>
            <td>{{this.nguon_dang}}</td>
            <td>{{this.ngay_dang}}</td>
             <td>{{this.views}}</td>
            <td>
                <a href="tin-tuc/{{this._id}}"><i class="fa fa-pencil fa-lg" arial-hidden="true"></i></a>
                <a href="tin-tuc/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"> <i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>