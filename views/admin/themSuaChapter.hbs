<div class="card-body">
    <h5 class="card-title">{{viewTitle}}</h5>
    <form class="" action="http://localhost:3000/admin/chapter/add" method="POST" enctype="text/html">
        <input type="hidden" name="chapId" value="{{chapter._id}}">
         <div class="position-relative row form-group"><label for="idTruyen" class="col-sm-2 col-form-label">ID Truyện</label>
            <div class="col-sm-10"><input name="idTruyen" placeholder="ID Truyện" value="{{{tId}}}" type="text"
                    class="form-control" ></div>
        </div>
        <div class="position-relative row form-group"><label for="tenChuong" class="col-sm-2 col-form-label">Tên Chương</label>
            <div class="col-sm-10"><input name="tenChuong" placeholder="Tiêu đề video" value="{{chapter.ten_chuong}}" type="text"
                    class="form-control" ></div>
        </div>
          <div class="position-relative row form-group"><label for="server1" class="col-sm-2 col-form-label">Server 1</label>
            <div class="col-sm-10"><input name="server1" placeholder="Server 1" value="{{chapter.server_1}}" type="text"
                    class="form-control" ></div>
        </div>
        <div class="position-relative row form-group"><label for="server2" class="col-sm-2 col-form-label">Server 2</label>
            <div class="col-sm-10"><input name="server2" placeholder="Server 2" value="{{chapter.server_2}}" type="text"
                    class="form-control" ></div>
        </div>
           <div class="position-relative row form-group"><label for="server3" class="col-sm-2 col-form-label">Server 3</label>
            <div class="col-sm-10"><input name="server3" placeholder="Server 3" value="{{chapter.server_3}}" type="text"
                    class="form-control" ></div>
        </div>
        <div class="position-relative row form-group"><label for="server4" class="col-sm-2 col-form-label">Server 4</label>
            <div class="col-sm-10"><input name="server4" placeholder="Server 4" value="{{chapter.server_4}}" type="text"
                    class="form-control" ></div>
        </div>
        <div class="position-relative row form-group"><label for="server5" class="col-sm-2 col-form-label">Server 5</label>
            <div class="col-sm-10"><input name="server5" placeholder="Server 5" value="{{chapter.server_5}}" type="text"
                    class="form-control" ></div>
        </div>
        <div class="position-relative row form-check">
            <div class="col-sm-10 offset-sm-2">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>