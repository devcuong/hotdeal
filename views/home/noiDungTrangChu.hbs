<section class="section-de-cu index-section">
    <div class="container">
        <div class="title_home">
            <a href="#">
                <span class="title_home_text">TRUYỆN ĐỀ CỬ</span>
            </a>
        </div>
        <div class="owl-carousel owl-theme" id="truyen-de-cu">
            {{#each lstTruyenDeCu}}
            <div class="item">
                    <a href="/truyen-tranh/{{this.slug_truyen}}" class="card-content" title="{{this.ten_truyen}}">
                        <div class="card-img card-img-top order-now"><img src="{{this.hinh_truyen}}"
                                alt="{{this.ten_truyen}}" class="card-img">
                            <p class="pcd-pricing">
                                <span class="pcd-price"><a href="/truyen-tranh/{{this.slug_truyen}}"
                                        title="Chapter {{this.chap_moi_ra.0.ten_chuong}}">Chapter
                                        {{this.chap_moi_ra.0.ten_chuong}}</a>
                                    &nbsp;
                                    <i class="fas fa-clock"></i><span class="time needs_to_be_rendered" datetime="{{this.chap_moi_ra.0.thoi_gian_tao}}">
                                       
                                    </span>
                                    <input type="hidden" id="t-{{this._id}}" class="type"
                                        value="{{this.chap_moi_ra.0.thoi_gian_tao}}">
                                </span>
                            </p>
                        </div>
                        <div class="product-body">
                            <div class="product-name">{{this.ten_truyen}}
                            </div>
                        </div>
                    </a>
            </div>
            {{/each}}
            
        </div>
         
    </div>
</section>
