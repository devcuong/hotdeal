<section class="index-section">
    <div class="container">
        <div>
            <div class="row text-center padding">
                <div class="col-xs-12 col-sm-12 col-md-9">
                    <div class="title_home">
                        <a href="#">
                            <span class="title_home_text">TRUYỆN MỚI CẬP NHẬT</span>
                        </a>
                    </div>
                    <div class="row">
                        {{#each lstTruyenCapNhat}}
                        <div class="col-md-3 col-truyen">
                            <div class="item-truyen">
                                <figure class="clearfix">
                                    <div class="image">
                                        <a title="{{this.ten_truyen}}"
                                            href="/truyen-tranh/{{this.slug_truyen}}">
                                            <img src="{{this.hinh_truyen}}"
                                                class="lazy"
                                                data-original="{{this.hinh_truyen}}"
                                                alt="{{this.ten_truyen}}"
                                                style="display: inline;">
                                        </a>
                                        <div class="view clearfix">
                                            <span class="pull-left">
                                                <i class="fa fa-eye">
                                                </i> <span class="needs_to_format">{{this.luot_xem}}</span><i class="fa fa-comment"></i> <span class="needs_to_format">{{this.luot_danh_gia}}</span> <i
                                                    class="fa fa-heart"></i>
                                                <span class="needs_to_format">{{this.luot_theo_doi}}</span></span>
                                        </div>
                                    </div>
                                    <figcaption>
                                        <h3>
                                            <a class="jtip" data-jtip="#truyen-tranh-23961"
                                                href="/truyen-tranh/{{this.slug_truyen}}">{{this.ten_truyen}}</a>
                                        </h3>
                                        <ul>
                                            <li class="chapter clearfix"><a
                                                    href="/truyen-tranh/{{this.slug_truyen}}"
                                                    title="Chapter {{this.chap_moi_ra.2.ten_chuong}}: {{this.ten_truyen}}">Chapter {{this.chap_moi_ra.2.ten_chuong}}</a><i
                                                    class="time needs_to_be_rendered" datetime="{{this.chap_moi_ra.2.thoi_gian_tao}}"></i></li>
                                            <li class="chapter clearfix"><a
                                                    href="/truyen-tranh/{{this.slug_truyen}}"
                                                    title="Chapter {{this.chap_moi_ra.1.ten_chuong}}: {{this.ten_truyen}}">Chapter {{this.chap_moi_ra.1.ten_chuong}}</a><i
                                                    class="time needs_to_be_rendered" datetime="{{this.chap_moi_ra.1.thoi_gian_tao}}">{{this.chap_moi_ra.1.thoi_gian_tao}}</i></li>
                                            <li class="chapter clearfix"><a
                                                    href="/truyen-tranh/{{this.slug_truyen}}"
                                                    title="Chapter {{this.chap_moi_ra.2.ten_chuong}}: {{this.ten_truyen}}">Chapter {{this.chap_moi_ra.0.ten_chuong}}</a><i
                                                    class="time needs_to_be_rendered" datetime="{{this.chap_moi_ra.0.thoi_gian_tao}}">{{this.chap_moi_ra.0.thoi_gian_tao}}</i></li>
                                        </ul>
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    {{/each}}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-3">
                    {{> home-sidebar-history }}
                     {{> home-sidebar-category }}
                </div>
            </div>
        </div>
    </div>
</section>
